<div class="qor-actions">
  <div class="qor-action-advanced-filter">
    <label class="mdl-button mdl-button--colored" type="button">
      <span class="qor-notifications__unread">20</span>
      {{t "qor_admin.actions.advanced_filter" "Advanced Filter"}}
    </label>
  </div>

  <div class="qor-filter__block qor-filter__dropdown clearfix" style="display: block;">
    {{$filters := get_filters}}
    {{range $filter := $filters}}
      <div class="qor-actions qor-bottomsheet__filter" data-toggle="qor.filter">
        {{render_filter $filter}}
      </div>
    {{end}}

    <button>{{t "qor_admin.actions.filter.apply" "Apply"}}</button>
    <button>{{t "qor_admin.actions.filter.save_and_apply" "Save & Apply"}}</button>
  </div>
</div>
